<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="generator.properties"/>
    <context id="MySqlContext" targetRuntime="MyBatis3" defaultModelType="flat">
        <!-- 配置SQL语句中的前置分隔符 -->
        <property name="beginningDelimiter" value="`"/>
        <!-- 配置SQL语句中的后置分隔符 -->
        <property name="endingDelimiter" value="`"/>
        <!-- 配置生成Java文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>

        <!-- Unified Domain Model Plugin (replaces LocalDateTime Serializable, Deserializable, and NoGetterSetter plugins) -->
        <plugin type="cloud.catfish.mbg.plugin.DomainModelPlugin">
            <property name="enableJsonFormat" value="true"/>
            <property name="enableDateTimeFormat" value="true"/>
            <property name="generateGetters" value="false"/>
            <property name="generateSetters" value="false"/>
            <property name="dateTimePattern" value="yyyy-MM-dd HH:mm:ss"/>
            <property name="timezone" value="GMT+8"/>
        </plugin>

        <!-- lombok annotation Plugin -->
        <plugin type="cloud.catfish.mbg.plugin.LombokAnnotationPlugin"/>

        <!-- VO generator Plugin -->
        <plugin type="cloud.catfish.mbg.plugin.VoGeneratorPlugin">
            <property name="voPackage" value="cloud.catfish.mbg.model.vo"/>
            <property name="mapperPackage" value="cloud.catfish.mbg.mapper.vo"/>
            <property name="voTargetProject" value="mbg/src/main/java"/>
            <property name="mapperTargetProject" value="mbg/src/main/java"/>
            <property name="enableMappers" value="true"/>
            <property name="mapperComponentModel" value="spring"/>
            <property name="enableSwagger" value="true"/>
            <property name="swaggerDescriptionSuffix" value=" VO"/>
        </plugin>

        <!-- RequestParam generator Plugin -->
        <plugin type="cloud.catfish.mbg.plugin.RequestParamGeneratorPlugin">
            <property name="requestParamPackage" value="cloud.catfish.mbg.model.param"/>
            <property name="requestParamTargetProject" value="mbg/src/main/java"/>
            <property name="enableValidation" value="true"/>
            <property name="enablePagination" value="true"/>
            <property name="enableSorting" value="true"/>
            <property name="enableSwagger" value="true"/>
            <property name="enableDateRange" value="true"/>
            <property name="swaggerDescriptionSuffix" value=" Request Parameters"/>
        </plugin>

        <!-- controller generator Plugin -->
        <plugin type="cloud.catfish.mbg.plugin.CustomVelocityControllerPlugin"/>

        <!-- service generator Plugin -->
        <plugin type="cloud.catfish.mbg.plugin.CustomVelocityServicePlugin"/>

        <!-- service impl generator Plugin -->
        <plugin type="cloud.catfish.mbg.plugin.CustomVelocityServiceImplPlugin"/>

        <!-- lombok custom serializable Plugin -->
        <plugin type="cloud.catfish.mbg.plugin.CustomSerializablePlugin"/>

        <!-- batch insert Plugin -->
        <plugin type="cloud.catfish.mbg.plugin.BatchInsertPlugin"/>

        <!-- batch insert selective Plugin -->
        <plugin type="cloud.catfish.mbg.plugin.BatchInsertSelectivePlugin"/>

        <!-- 生成mapper.xml时覆盖原文件 -->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <commentGenerator type="cloud.catfish.mbg.CommentGenerator">
            <!-- 是否阻止生成的注释 -->
            <property name="suppressAllComments" value="true"/>
            <!-- 是否阻止生成的注释包含时间戳 -->
            <property name="suppressDate" value="true"/>
            <!-- 是否添加数据库表的备注信息 -->
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>
        <!-- 配置MBG要连接的数据库信息 -->
        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.connectionURL}"
                        userId="${jdbc.userId}"
                        password="${jdbc.password}">
            <!-- 解决mysql驱动升级到8.0后不生成指定数据库代码的问题 -->
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <javaTypeResolver type="cloud.catfish.mbg.CustomJavaTypeResolver"/>

        <!-- 用于控制实体类的生成 -->
        <javaModelGenerator targetPackage="cloud.catfish.mbg.model" targetProject="mbg/src/main/java"/>
        <!-- 用于控制Mapper.xml文件的生成 -->
        <sqlMapGenerator targetPackage="cloud.catfish.mbg.mapper" targetProject="mbg/src/main/resources"/>
        <!-- 用于控制Mapper接口的生成 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="cloud.catfish.mbg.mapper"
                             targetProject="mbg/src/main/java"/>

        <!-- 配置需要生成的表，生成全部表tableName设为% -->
<!--        <table tableName="%">-->
<!--            &lt;!&ndash; 用来指定主键生成策略 &ndash;&gt;-->
<!--            <generatedKey column="id" sqlStatement="MySql" identity="true"/>-->
<!--        </table>-->

        <table tableName="test">
            <!-- 用来指定主键生成策略 -->
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

    </context>
</generatorConfiguration>